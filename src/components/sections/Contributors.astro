---
import { t } from 'i18next';
import Section from '@/components/ui/Section.astro';
import Table from '@/components/ui/Table';
import { SITE } from '@/config';

export interface Props {
  id: string;
}

const { id = 'contributors' } = Astro.props;
---

<Section id={id} class="bg-primary">
  <div class="flex flex-col justify-center">
    <div class="section-title">{t('titles.contributors')}</div>
    <div class="section-description">
      {t('descriptions.contributors')}
    </div>
  </div>
  <div class="mx-auto mt-16 block">
    <Table client:load />
  </div>
  <div class="flex justify-center">
    <a
      rel="nofollow"
      href={SITE.polkadotConfig.openScanLink}
      target="_blank"
      class="mt-14 text-center text-lg font-medium text-primary transition duration-300 ease-in-out hover:cursor-pointer hover:underline"
      >{t('contributors.openPolka')}</a
    >
  </div>
</Section>
