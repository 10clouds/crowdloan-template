---
import Section from '@/components/ui/Section.astro';
import Table from '@/components/ui/Table.astro';

export interface Props {
  id: string;
}

const { id = 'contributors' } = Astro.props;
---

<Section id={id} class="bg-primary">
  <div class="flex flex-col justify-center">
    <div class="section-title">Recent contributors</div>
    <div class="section-description">
      Here you can shortly say something about the contributors
    </div>
    <div class="mx-auto mt-16">
      <Table />
    </div>
    <span class="mt-14 text-center text-lg font-medium text-primary"
      >Open PolkaScan</span
    >
  </div>
</Section>
