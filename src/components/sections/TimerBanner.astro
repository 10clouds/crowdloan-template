---
import TimeLeftTimer from '@/components/common/TimeLeftTimer';
import Button from '@/components/ui/Button.astro';
import { SITE } from '@/config';
import ButtonWrapper from '@/features/Contribution/ButtonWrapper';
---

<div
  class="mx-auto w-full bg-vector-1 bg-cover bg-center bg-no-repeat py-10 px-4 md:py-20"
>
  <div class="flex flex-col items-center justify-center py-12 md:py-40">
    <TimeLeftTimer client:visible date={SITE.crowdLoadEndDate} variant="big" />
    <div class="mx-auto mt-12 w-full md:w-auto">
      <ButtonWrapper client:load>
        <Button variant="default-light" />
      </ButtonWrapper>
    </div>
  </div>
</div>
