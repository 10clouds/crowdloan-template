---
export interface Props {
  id: string;
  class?: string;
  isPaddingX?: boolean;
}

const { id = '', class: className, isPaddingX = true } = Astro.props;
---

<section
  id={id}
  class={`h-screen pt-[92px] w-full text-base ${
    isPaddingX ? 'px-4 md:px-32' : ''
  } ${className}`}
>
  <slot />
</section>
