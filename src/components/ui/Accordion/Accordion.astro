---
import AccordionItem from './AccordionItem';

export interface Props {
  faq: {
    question: string;
    answer: string;
  }[];
  class?: string;
}

const { faq = [], class: className = '' } = Astro.props;
---

<div
  class:list={[
    'mx-auto w-fit max-w-3xl rounded-lg bg-white drop-shadow-primary mt-16',
    { [className]: className },
  ]}
>
  {faq.map((question) => <AccordionItem client:load {...question} />)}
</div>
