---
export interface Props {
  value: number;
  isRemainingSpaceVisible?: boolean;
  class?: string;
}

const {
  value = 10,
  isRemainingSpaceVisible = true,
  class: className = '',
} = Astro.props;
---

<div
  class:list={[
    'h-2.5 w-full rounded-full transition duration-150 ease-in-out',
    {
      'bg-zinc-300': isRemainingSpaceVisible,
      [className]: className,
    },
  ]}
>
  <div class="h-2.5 rounded-full bg-timer-gradient" style={`width: ${value}%`}>
  </div>
</div>
