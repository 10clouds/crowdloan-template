---
export interface Props {
  value: number;
  isRemainingSpaceVisible?: boolean;
}

const { value = 10, isRemainingSpaceVisible = true } = Astro.props;
---

<div
  class={`mt-4 h-2.5 w-full rounded-full transition duration-150 ease-in-out ${
    isRemainingSpaceVisible ? 'bg-gray-200 ' : ''
  }`}
>
  <div class="h-2.5 rounded-full bg-timer-gradient" style={`width: ${value}%`}>
  </div>
</div>
