---
import ToggleMenu from '@/components/common/ToggleMenu.astro';

export interface Props {
  navLinks: {
    title: string;
    url: string;
  }[];
}

const { navLinks = [] } = Astro.props;
---

<header
  class="sticky top-0 z-40 mx-auto w-full flex-none transition-all duration-100 ease-in"
  id="header"
>
  <div
    class="mx-auto w-full max-w-6xl py-3 px-3 md:flex md:justify-between md:py-3.5 md:px-4"
  >
    <div class="flex justify-between">
      <a class="flex items-center" href="/">
        <!-- <Logo /> -->
      </a>
      <div class="flex items-center md:hidden">
        <ToggleMenu />
      </div>
    </div>
    <nav
      class="hidden h-[calc(100vh-72px)] w-full items-center overflow-y-auto md:flex md:h-auto md:w-auto md:overflow-visible"
      aria-label="Main navigation"
    >
      <ul
        class="flex w-full flex-col pt-8 text-xl md:w-auto md:flex-row md:self-center md:pt-0 md:text-base"
      >
        {
          navLinks.map(({ title, url }) => (
            <li>
              <a
                class="flex items-center px-4 py-3 font-medium transition duration-150 ease-in-out hover:text-base-light"
                href={url}
              >
                {title}
              </a>
            </li>
          ))
        }
      </ul>
      <div class="ml-4 flex items-center md:mb-0 md:self-center">
        <div class="hidden items-center md:flex">
          <!-- TODO logic for contribute btn -->
          <a
            class="btn ml-3 w-full py-2.5 px-5 text-sm font-semibold text-gray-600 shadow-none"
            href="#">Contribute</a
          >
        </div>
      </div>
    </nav>
  </div>
</header>
