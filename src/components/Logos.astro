---
import type { Logo } from '@/types';

export interface Props {
  logos: Logo[];
  class?: string;
}

const { logos = [], class: className = '' } = Astro.props;
---

<div
  class:list={[
    'mt-auto flex w-screen flex-1 flex-wrap items-center justify-evenly px-4 bg-white pt-6 md:px-32 md:pt-0 mx-auto md:flex-none lg:max-w-7xl',
    { [className]: className },
  ]}
>
  {
    logos.map((logo) => (
      <img
        class="aspect-[3/2] w-[15%] object-contain md:w-[10%]"
        src={logo.src}
        alt={logo.alt}
      />
    ))
  }
</div>
