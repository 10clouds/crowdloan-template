---
import { t } from 'i18next';
import Layout from '@/layouts/BaseLayout.astro';

const title = `Error 404`;
---

<Layout title={title} description="Sorry, we couldn't find this page.">
  <section class="flex h-full items-center p-16">
    <div
      class="container mx-auto my-8 flex flex-col items-center justify-center px-5"
    >
      <div class="max-w-md text-center">
        <h2 class="mb-8 text-9xl font-bold">
          <span class="sr-only">{t('404.error')}</span>
          <span
            class="bg-gradient-to-r from-purple-400 to-pink-600 bg-clip-text text-8xl font-extrabold text-transparent"
            >404</span
          >
        </h2>
        <p class="text-3xl font-semibold md:text-3xl">
          {t('404.sorryNoPage')}
        </p>
        <p class="mt-4 mb-8 text-lg text-gray-600 dark:text-slate-400">
          {t('404.weHaveOtherPages')}
        </p>
        <a href="/" class="btn ml-4">{t('404.backHome')}</a>
      </div>
    </div>
  </section>
</Layout>
